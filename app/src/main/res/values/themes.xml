<resources>
    <!-- Base application theme. -->
    <style name="Theme.Dudu" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/back_primary</item>
        <item name="colorPrimaryVariant">@color/back_primary</item>
        <item name="colorOnPrimary">@color/label_primary</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/blue</item>
        <item name="colorSecondaryVariant">@color/blue</item>
        <item name="colorOnSecondary">@color/label_secondary</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:actionMenuTextColor">@color/blue</item>
        <item name="android:datePickerDialogTheme">@style/DatePicker</item>
    </style>

    <style name="LargeTitle" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">32sp</item>
        <item name="android:textColor">@color/label_primary</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Title" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/label_primary</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ButtonTitle" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/label_primary</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Body" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/label_primary</item>
    </style>

    <style name="Subhead" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/label_primary</item>
    </style>

    <style name="DatePicker" parent="Theme.MaterialComponents.DayNight.Dialog">
        <item name="colorOnPrimary">@color/blue</item>
        <item name="colorSecondary">@color/blue</item>
        <item name="android:textColorPrimaryInverse">@color/white</item>
        <item name="android:textColorSecondaryInverse">@color/white</item>
    </style>
</resources>